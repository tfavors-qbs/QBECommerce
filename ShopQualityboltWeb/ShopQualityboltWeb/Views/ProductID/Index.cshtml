@model IEnumerable<ProductID>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LegacyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Group)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shape)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Thread)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spec)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LegacyId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LegacyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group.Name)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Shape.DisplayName)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Material.DisplayName)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Coating.DisplayName)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Thread.DisplayName)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Spec.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LegacyId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@page "/admin/contract-items"
@using QBExternalWebLibrary.Services.Http
@using QBExternalWebLibrary.Models
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using QBExternalWebLibrary.Models.Products
@using ThreadModel = QBExternalWebLibrary.Models.Products.Thread
@using System.Net.Http.Json
@using ShopQualityboltWebBlazor.Components.CustomComponents
@using Microsoft.AspNetCore.WebUtilities
@attribute [Authorize(Roles = "Admin")]
@inject IApiService<ContractItem, ContractItemEditViewModel> ContractItemService
@inject IApiService<Client, ClientEditViewModel> ClientService
@inject IApiService<SKU, SKUEditViewModel> SKUService
@inject IApiService<Diameter, Diameter> DiameterService
@inject IApiService<Length, Length> LengthService
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@inject NavigationManager NavigationManager
@inject IHttpClientFactory HttpClientFactory
@inject IJSRuntime JSRuntime

<PageTitle>Contract Items Management</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="mt-4">
    <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Class="mb-4">
        <MudText Typo="Typo.h4">Contract Items Management</MudText>
        <MudButton Variant="Variant.Text" 
                   StartIcon="@Icons.Material.Filled.ArrowBack"
                   OnClick="@(() => NavigationManager.NavigateTo("/admin/clients"))">
            Back to Clients
        </MudButton>
    </MudStack>

    <MudPaper Class="pa-4 mb-4">
        <MudGrid>
            <MudItem xs="12" md="6">
                <MudSelect T="int?" @bind-Value="selectedClientId" Label="Select Client" Variant="Variant.Outlined" 
                           Required="true" RequiredError="Please select a client" AdornmentIcon="@Icons.Material.Filled.Business"
                           AdornmentColor="Color.Primary">
                    @if (clients != null)
                    {
                        foreach (var client in clients)
                        {
                            <MudSelectItem Value="@((int?)client.Id)">@client.Name</MudSelectItem>
                        }
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="12" md="6" Class="d-flex align-center">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="LoadContractItems" Disabled="@(selectedClientId == null)">
                    <MudIcon Icon="@Icons.Material.Filled.Search" Class="mr-2" />
                    Load Contract Items
                </MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="OpenCreateDialog" 
                           Disabled="@(selectedClientId == null)" Class="ml-2">
                    <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-2" />
                    Add New Item
                </MudButton>
            </MudItem>
        </MudGrid>
    </MudPaper>

    @if (loading)
    {
        <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
        <MudText Align="Align.Center" Typo="Typo.h6">Loading contract items...</MudText>
    }
    else if (contractItems != null && contractItems.Any())
    {
        <MudPaper>
            <MudTable Items="@contractItems" Hover="true" Striped="true" Dense="true" Filter="new Func<ContractItemEditViewModel,bool>(FilterFunc)">
                <ToolBarContent>
                    <MudText Typo="Typo.h6">Contract Items for @GetSelectedClientName()</MudText>
                    <MudSpacer />
                    <MudTextField @bind-Value="searchString" Placeholder="Search" Adornment="Adornment.Start" 
                                  AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
                </ToolBarContent>
                <HeaderContent>
                    <MudTh>Customer Stock #</MudTh>
                    <MudTh>Description</MudTh>
                    <MudTh>Price</MudTh>
                    <MudTh>SKU</MudTh>
                    <MudTh>Diameter</MudTh>
                    <MudTh>Length</MudTh>
                    <MudTh>Non-Stock</MudTh>
                    <MudTh>Actions</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="Customer Stock #">@context.CustomerStkNo</MudTd>
                    <MudTd DataLabel="Description">@context.Description</MudTd>
                    <MudTd DataLabel="Price">@context.Price.ToString("C")</MudTd>
                    <MudTd DataLabel="SKU">@context.SKUName</MudTd>
                    <MudTd DataLabel="Diameter">@context.DiameterName</MudTd>
                    <MudTd DataLabel="Length">@context.LengthName</MudTd>
                    <MudTd DataLabel="Non-Stock">
                        @if (context.NonStock)
                        {
                            <MudChip T="string" Color="Color.Warning" Size="Size.Small">Non-Stock</MudChip>
                        }
                        else
                        {
                            <MudChip T="string" Color="Color.Success" Size="Size.Small">In Stock</MudChip>
                        }
                    </MudTd>
                    <MudTd DataLabel="Actions">
                        <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Size="Size.Small"
                                       OnClick="@(() => OpenEditDialog(context))" />
                        <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small"
                                       OnClick="@(() => DeleteContractItem(context))" />
                    </MudTd>
                </RowTemplate>
                <PagerContent>
                    <MudTablePager />
                </PagerContent>
            </MudTable>
        </MudPaper>
    }
    else if (selectedClientId != null && !loading)
    {
        <MudAlert Severity="Severity.Info">No contract items found for the selected client.</MudAlert>
    }

    @* Non-Stock Items Requiring ProductID Assignment *@
    @if (contractItems != null && contractItems.Any() && nonStockItemsWithoutSpecs.Any())
    {
        <MudPaper Class="pa-4 mt-4">
            <MudText Typo="Typo.h5" Class="mb-4">
                <MudIcon Icon="@Icons.Material.Filled.Warning" Color="Color.Warning" Class="mr-2" />
                Non-Stock Items Requiring Specifications (@nonStockItemsWithoutSpecs.Count)
            </MudText>
            <MudAlert Severity="Severity.Info" Class="mb-4">
                These #XN items do not have ProductID. Use the filters below to find and assign appropriate specifications.
            </MudAlert>

            <MudGrid Class="mb-4">
                <MudItem xs="12" md="4">
                    <MudAutocomplete T="int?" Value="@selectedClassId" Label="Class" Variant="Variant.Outlined" 
                               Clearable="true" AdornmentIcon="@Icons.Material.Filled.Category" AdornmentColor="Color.Primary"
                               SearchFunc="@SearchClasses" ToStringFunc="@(id => GetClassDisplayName(id))"
                               CoerceText="false" CoerceValue="true" ResetValueOnEmptyText="true" MaxItems="null"
                               ValueChanged="@OnClassChanged">
                    </MudAutocomplete>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudAutocomplete T="int?" Value="@selectedGroupId" Label="Group" Variant="Variant.Outlined" 
                               Clearable="true" AdornmentIcon="@Icons.Material.Filled.Category" AdornmentColor="Color.Primary"
                               SearchFunc="@SearchGroups" ToStringFunc="@(id => GetGroupDisplayName(id))"
                               CoerceText="false" CoerceValue="true" ResetValueOnEmptyText="true" MaxItems="null"
                               ValueChanged="@OnGroupChanged">
                    </MudAutocomplete>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudAutocomplete T="int?" Value="@selectedShapeId" Label="Shape" Variant="Variant.Outlined" 
                               Clearable="true" AdornmentIcon="@Icons.Material.Filled.Category" AdornmentColor="Color.Primary"
                               SearchFunc="@SearchShapes" ToStringFunc="@(id => GetShapeDisplayName(id))"
                               CoerceText="false" CoerceValue="true" ResetValueOnEmptyText="true" MaxItems="null"
                               ValueChanged="@OnShapeChanged">
                    </MudAutocomplete>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudAutocomplete T="int?" Value="@selectedMaterialId" Label="Material" Variant="Variant.Outlined" 
                               Clearable="true" AdornmentIcon="@Icons.Material.Filled.Category" AdornmentColor="Color.Primary"
                               SearchFunc="@SearchMaterials" ToStringFunc="@(id => GetMaterialDisplayName(id))"
                               CoerceText="false" CoerceValue="true" ResetValueOnEmptyText="true" MaxItems="null"
                               ValueChanged="@OnMaterialChanged">
                    </MudAutocomplete>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudAutocomplete T="int?" Value="@selectedCoatingId" Label="Coating" Variant="Variant.Outlined" 
                               Clearable="true" AdornmentIcon="@Icons.Material.Filled.Category" AdornmentColor="Color.Primary"
                               SearchFunc="@SearchCoatings" ToStringFunc="@(id => GetCoatingDisplayName(id))"
                               CoerceText="false" CoerceValue="true" ResetValueOnEmptyText="true" MaxItems="null"
                               ValueChanged="@OnCoatingChanged">
                    </MudAutocomplete>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudAutocomplete T="int?" Value="@selectedThreadId" Label="Thread" Variant="Variant.Outlined" 
                               Clearable="true" AdornmentIcon="@Icons.Material.Filled.Category" AdornmentColor="Color.Primary"
                               SearchFunc="@SearchThreads" ToStringFunc="@(id => GetThreadDisplayName(id))"
                               CoerceText="false" CoerceValue="true" ResetValueOnEmptyText="true" MaxItems="null"
                               ValueChanged="@OnThreadChanged">
                    </MudAutocomplete>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudAutocomplete T="int?" Value="@selectedSpecId" Label="Spec" Variant="Variant.Outlined" 
                               Clearable="true" AdornmentIcon="@Icons.Material.Filled.Category" AdornmentColor="Color.Primary"
                               SearchFunc="@SearchSpecs" ToStringFunc="@(id => GetSpecDisplayName(id))"
                               CoerceText="false" CoerceValue="true" ResetValueOnEmptyText="true" MaxItems="null"
                               ValueChanged="@OnSpecChanged">
                    </MudAutocomplete>
                </MudItem>
            </MudGrid>

            <MudText Typo="Typo.subtitle1" Class="mb-2">
                Matching ProductIDs: @filteredProductIDs.Count
            </MudText>

            <MudTable Items="@nonStockItemsWithoutSpecs" Hover="true" Striped="true" Dense="true">
                <HeaderContent>
                    <MudTh>Customer Stock #</MudTh>
                    <MudTh>Description</MudTh>
                    <MudTh>SKU</MudTh>
                    <MudTh>Assign ProductID</MudTh>
                    <MudTh>Actions</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="Customer Stock #">@context.CustomerStkNo</MudTd>
                    <MudTd DataLabel="Description">@context.Description</MudTd>
                    <MudTd DataLabel="SKU">
                        <MudChip T="string" Color="Color.Warning" Size="Size.Small">@context.SKUName</MudChip>
                    </MudTd>
                    <MudTd DataLabel="Assign ProductID">
                        <MudSelect T="int?" @bind-Value="@context.ProductIDId" Label="ProductID" Variant="Variant.Outlined" 
                                   Dense="true" Margin="Margin.Dense">
                            @foreach (var productId in filteredProductIDs)
                            {
                                <MudSelectItem Value="@((int?)productId.Id)">@productId.LegacyName - @productId.Description</MudSelectItem>
                            }
                        </MudSelect>
                    </MudTd>
                    <MudTd DataLabel="Actions">
                        <MudButton Variant="Variant.Filled" Color="Color.Success" Size="Size.Small"
                                   OnClick="@(async () => await AssignProductIDToContractItem(context))"
                                   Disabled="@(context.ProductIDId == null)">
                            Save
                        </MudButton>
                    </MudTd>
                </RowTemplate>
            </MudTable>
        </MudPaper>
    }

    @* Items Missing Diameter and Length *@
    @if (contractItems != null && contractItems.Any() && itemsMissingSpecs.Any())
    {
        <MudPaper Class="pa-4 mt-4">
            <MudText Typo="Typo.h5" Class="mb-4">
                <MudIcon Icon="@Icons.Material.Filled.Error" Color="Color.Error" Class="mr-2" />
                Items Missing Diameter and Length (@itemsMissingSpecs.Count)
            </MudText>
            <MudAlert Severity="Severity.Warning" Class="mb-4">
                These items do not have Diameter or Length assigned, regardless of stock status. This may indicate incomplete data that needs attention.
            </MudAlert>

            <MudTable Items="@itemsMissingSpecs" Hover="true" Striped="true" Dense="true">
                <HeaderContent>
                    <MudTh>Customer Stock #</MudTh>
                    <MudTh>Description</MudTh>
                    <MudTh>SKU</MudTh>
                    <MudTh>Stock Status</MudTh>
                    <MudTh>Actions</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="Customer Stock #">@context.CustomerStkNo</MudTd>
                    <MudTd DataLabel="Description">@context.Description</MudTd>
                    <MudTd DataLabel="SKU">
                        @if (context.NonStock)
                        {
                            <MudChip T="string" Color="Color.Warning" Size="Size.Small">@context.SKUName</MudChip>
                        }
                        else
                        {
                            <MudChip T="string" Color="Color.Info" Size="Size.Small">@context.SKUName</MudChip>
                        }
                    </MudTd>
                    <MudTd DataLabel="Stock Status">
                        @if (context.NonStock)
                        {
                            <MudChip T="string" Color="Color.Warning" Size="Size.Small">Non-Stock</MudChip>
                        }
                        else
                        {
                            <MudChip T="string" Color="Color.Success" Size="Size.Small">In Stock</MudChip>
                        }
                    </MudTd>
                    <MudTd DataLabel="Actions">
                        <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Size="Size.Small"
                                       OnClick="@(() => OpenEditDialog(context))" />
                    </MudTd>
                </RowTemplate>
                <PagerContent>
                    <MudTablePager PageSizeOptions="new int[] { 10, 25, 50, 100 }" />
                </PagerContent>
            </MudTable>
        </MudPaper>
    }
</MudContainer>

@code {
    private List<ClientEditViewModel> clients = new();
    private List<ContractItemEditViewModel> contractItems = new();
    private List<SKUEditViewModel> skus = new();
    private List<Diameter> diameters = new();
    private List<Length> lengths = new();
    private int? selectedClientId;
    private bool loading = false;
    private string searchString = "";
    private HttpClient _httpClient;

    // Non-stock items management
    private List<ContractItemEditViewModel> nonStockItemsWithoutSpecs = new();
    private List<ContractItemEditViewModel> itemsMissingSpecs = new();
    private List<Class> classes = new();
    private List<Group> groups = new();
    private List<Shape> shapes = new();
    private List<Material> materials = new();
    private List<Coating> coatings = new();
    private List<ThreadModel> threads = new();
    private List<Spec> specs = new();
    private List<ProductIDEditViewModel> allProductIDs = new();
    private int? selectedClassId;
    private int? selectedGroupId;
    private int? selectedShapeId;
    private int? selectedMaterialId;
    private int? selectedCoatingId;
    private int? selectedThreadId;
    private int? selectedSpecId;

    private List<ProductIDEditViewModel> filteredProductIDs
    {
        get
        {
            // First filter groups by class if class is selected
            var filteredGroupIds = selectedClassId.HasValue 
                ? groups.Where(g => g.ClassId == selectedClassId.Value).Select(g => g.Id).ToList()
                : groups.Select(g => g.Id).ToList();

            return allProductIDs.Where(p =>
                // If class is selected, only show ProductIDs whose group matches the class
                (!selectedClassId.HasValue || filteredGroupIds.Contains(p.GroupId)) &&
                (!selectedGroupId.HasValue || p.GroupId == selectedGroupId.Value) &&
                (!selectedShapeId.HasValue || p.ShapeId == selectedShapeId.Value) &&
                (!selectedMaterialId.HasValue || p.MaterialId == selectedMaterialId.Value) &&
                (!selectedCoatingId.HasValue || p.CoatingId == selectedCoatingId.Value) &&
                (!selectedThreadId.HasValue || p.ThreadId == selectedThreadId.Value) &&
                (!selectedSpecId.HasValue || p.SpecId == selectedSpecId.Value)
            ).ToList();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        _httpClient = HttpClientFactory.CreateClient("Auth");
        await LoadClients();
        await LoadReferenceData();
        
        // Check for clientId query parameter
        var uri = new Uri(NavigationManager.Uri);
        var queryParams = QueryHelpers.ParseQuery(uri.Query);
        if (queryParams.TryGetValue("clientId", out var clientIdString) && int.TryParse(clientIdString, out var clientId))
        {
            selectedClientId = clientId;
            await LoadContractItems();
        }
    }

    private async Task LoadClients()
    {
        try
        {
            var result = await ClientService.GetAllAsync();
            clients = result.ToList();
        }
        catch (Exception ex)
        {
            await LogErrorAsync("Contract Items Error", "Failed to Load Clients", ex.Message);
            Snackbar.Add($"Error loading clients: {ex.Message}", Severity.Error);
        }
    }

    private async Task LoadReferenceData()
    {
        try
        {
            skus = (await SKUService.GetAllAsync()).ToList();
            diameters = (await DiameterService.GetAllAsync()).ToList();
            lengths = (await LengthService.GetAllAsync()).ToList();

            // Load specification types for filtering
            classes = (await _httpClient.GetFromJsonAsync<List<Class>>("api/classes")) ?? new List<Class>();
            groups = (await _httpClient.GetFromJsonAsync<List<Group>>("api/groups")) ?? new List<Group>();
            shapes = (await _httpClient.GetFromJsonAsync<List<Shape>>("api/shapes")) ?? new List<Shape>();
            materials = (await _httpClient.GetFromJsonAsync<List<Material>>("api/materials")) ?? new List<Material>();
            coatings = (await _httpClient.GetFromJsonAsync<List<Coating>>("api/coatings")) ?? new List<Coating>();
            threads = (await _httpClient.GetFromJsonAsync<List<ThreadModel>>("api/threads")) ?? new List<ThreadModel>();
            specs = (await _httpClient.GetFromJsonAsync<List<Spec>>("api/specs")) ?? new List<Spec>();

            // Load all ProductIDs for filtering
            allProductIDs = (await _httpClient.GetFromJsonAsync<List<ProductIDEditViewModel>>("api/productids")) ?? new List<ProductIDEditViewModel>();
        }
        catch (Exception ex)
        {
            await LogErrorAsync("Contract Items Error", "Failed to Load Reference Data", ex.Message);
            Snackbar.Add($"Error loading reference data: {ex.Message}", Severity.Error);
        }
    }

    private async Task LoadContractItems()
    {
        if (selectedClientId == null) return;

        loading = true;
        try
        {
            var response = await _httpClient.GetAsync($"api/contractitems/admin/client/{selectedClientId.Value}");
            if (response.IsSuccessStatusCode)
            {
                contractItems = (await response.Content.ReadFromJsonAsync<List<ContractItemEditViewModel>>()) ?? new List<ContractItemEditViewModel>();
                
                // Debug: Check first few items received
                Console.WriteLine($"[Blazor] Received {contractItems.Count} contract items");
                foreach (var item in contractItems.Take(3))
                {
                    Console.WriteLine($"[Blazor] Item {item.Id} ({item.CustomerStkNo}): LengthId={item.LengthId}, LengthName={item.LengthName ?? "NULL"}, DiameterId={item.DiameterId}, DiameterName={item.DiameterName ?? "NULL"}");
                }
                
                // Filter non-stock items without specifications
                nonStockItemsWithoutSpecs = contractItems
                    .Where(ci => ci.NonStock && 
                                !ci.ProductIDId.HasValue)
                    .ToList();

                // Filter all items missing diameter AND length (regardless of stock status)
                itemsMissingSpecs = contractItems
                    .Where(ci => !ci.DiameterId.HasValue && !ci.LengthId.HasValue)
                    .ToList();

                Snackbar.Add($"Loaded {contractItems.Count} contract items ({nonStockItemsWithoutSpecs.Count} non-stock items need specifications, {itemsMissingSpecs.Count} items missing specs)", Severity.Success);
            }
            else
            {
                await LogErrorAsync("Contract Items Error", "Failed to Load Contract Items", $"API returned {response.StatusCode}", new { clientId = selectedClientId.Value });
                Snackbar.Add($"Error loading contract items: {response.StatusCode}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            await LogErrorAsync("Contract Items Error", "Failed to Load Contract Items", ex.Message, new { clientId = selectedClientId.Value });
            Snackbar.Add($"Error loading contract items: {ex.Message}", Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }

    private string GetSelectedClientName()
    {
        if (selectedClientId == null) return "";
        return clients.FirstOrDefault(c => c.Id == selectedClientId.Value)?.Name ?? "";
    }

    private bool FilterFunc(ContractItemEditViewModel item)
    {
        if (string.IsNullOrWhiteSpace(searchString))
            return true;
        if (item.CustomerStkNo.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (item.Description.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (item.SKUName != null && item.SKUName.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        return false;
    }

    private async Task OpenCreateDialog()
    {
        if (selectedClientId == null) return;

        var parameters = new DialogParameters
        {
            { nameof(ContractItemDialog.ContractItem), new ContractItemEditViewModel { ClientId = selectedClientId.Value, ClientName = GetSelectedClientName() } },
            { nameof(ContractItemDialog.IsEdit), false },
            { nameof(ContractItemDialog.SKUs), skus },
            { nameof(ContractItemDialog.Diameters), diameters },
            { nameof(ContractItemDialog.Lengths), lengths },
            { nameof(ContractItemDialog.ContractItemService), ContractItemService }
        };

        var dialog = await DialogService.ShowAsync<ContractItemDialog>("Create Contract Item", parameters);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            await LoadContractItems();
        }
    }

    private async Task OpenEditDialog(ContractItemEditViewModel item)
    {
        var parameters = new DialogParameters
        {
            { nameof(ContractItemDialog.ContractItem), item },
            { nameof(ContractItemDialog.IsEdit), true },
            { nameof(ContractItemDialog.SKUs), skus },
            { nameof(ContractItemDialog.Diameters), diameters },
            { nameof(ContractItemDialog.Lengths), lengths },
            { nameof(ContractItemDialog.ContractItemService), ContractItemService }
        };

        var dialog = await DialogService.ShowAsync<ContractItemDialog>("Edit Contract Item", parameters);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            await LoadContractItems();
        }
    }

    private async Task DeleteContractItem(ContractItemEditViewModel item)
    {
        bool? result = await DialogService.ShowMessageBox(
            "Confirm Delete",
            $"Are you sure you want to delete contract item '{item.CustomerStkNo}'?",
            yesText: "Delete", cancelText: "Cancel");

        if (result == true)
        {
            try
            {
                await ContractItemService.DeleteAsync(item.Id);
                Snackbar.Add("Contract item deleted successfully", Severity.Success);
                await LoadContractItems();
            }
            catch (Exception ex)
            {
                await LogErrorAsync("Contract Items Error", "Failed to Delete Contract Item", ex.Message, new { contractItemId = item.Id, customerStkNo = item.CustomerStkNo });
                Snackbar.Add($"Error deleting contract item: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task AssignProductIDToContractItem(ContractItemEditViewModel item)
    {
        if (!item.ProductIDId.HasValue)
        {
            Snackbar.Add("Please select a ProductID first", Severity.Warning);
            return;
        }

        try
        {
            var response = await _httpClient.PutAsJsonAsync($"api/contractitems/{item.Id}", item);
            
            if (response.IsSuccessStatusCode)
            {
                Snackbar.Add($"ProductID assigned to {item.CustomerStkNo} successfully", Severity.Success);
                await LoadContractItems(); // Reload to update the non-stock items list
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                await LogErrorAsync("Contract Items Error", "Failed to Assign ProductID", $"API returned {response.StatusCode} - {errorContent}", new { contractItemId = item.Id, customerStkNo = item.CustomerStkNo, productIdId = item.ProductIDId });
                Snackbar.Add($"Error assigning ProductID: {response.StatusCode} - {errorContent}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            await LogErrorAsync("Contract Items Error", "Failed to Assign ProductID", ex.Message, new { contractItemId = item.Id, customerStkNo = item.CustomerStkNo, productIdId = item.ProductIDId });
            Snackbar.Add($"Error assigning ProductID: {ex.Message}", Severity.Error);
        }
    }

    // Autocomplete search functions - filter dynamically based on current selections
    private async Task<IEnumerable<int?>> SearchClasses(string value, CancellationToken token)
    {
        await Task.CompletedTask;
        
        // Get classes that have ProductIDs matching current selections (excluding class itself)
        var availableClassIds = allProductIDs
            .Where(p => 
                (!selectedGroupId.HasValue || p.GroupId == selectedGroupId.Value) &&
                (!selectedShapeId.HasValue || p.ShapeId == selectedShapeId.Value) &&
                (!selectedMaterialId.HasValue || p.MaterialId == selectedMaterialId.Value) &&
                (!selectedCoatingId.HasValue || p.CoatingId == selectedCoatingId.Value) &&
                (!selectedThreadId.HasValue || p.ThreadId == selectedThreadId.Value) &&
                (!selectedSpecId.HasValue || p.SpecId == selectedSpecId.Value)
            )
            .Select(p => groups.FirstOrDefault(g => g.Id == p.GroupId)?.ClassId)
            .Where(id => id.HasValue)
            .Distinct()
            .ToHashSet();
        
        var filteredClasses = classes.Where(c => availableClassIds.Contains(c.Id));
        
        if (string.IsNullOrEmpty(value))
            return filteredClasses.OrderBy(c => c.DisplayName).Select(c => (int?)c.Id);
        
        return filteredClasses
            .Where(c => c.DisplayName.Contains(value, StringComparison.OrdinalIgnoreCase))
            .OrderBy(c => c.DisplayName)
            .Select(c => (int?)c.Id);
    }

    private async Task<IEnumerable<int?>> SearchGroups(string value, CancellationToken token)
    {
        await Task.CompletedTask;
        

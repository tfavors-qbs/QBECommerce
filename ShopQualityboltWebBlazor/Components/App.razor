<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
	
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
	
    <link rel="icon" type="image/png" href="favicon.ico" />
    <HeadOutlet />
    
    <style>
        .blazor-reconnect-modal {
            position: fixed;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            z-index: 9999;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .blazor-reconnect-modal > div {
            background-color: white;
            padding: 2rem;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        
        .blazor-reconnect-modal h5 {
            margin: 0 0 1rem 0;
            color: #333;
        }
        
        .blazor-reconnect-modal p {
            margin: 0;
            color: #666;
        }
    </style>
</head>

<body>
    <Routes @rendermode=RenderMode.InteractiveServer/>
    
    <div id="blazor-error-ui" style="display: none; position: fixed; top: 0; left: 0; right: 0; background: #dc3545; color: white; padding: 1rem; z-index: 10000; text-align: center;">
        An error has occurred. This application may no longer respond until reloaded.
        <a href="" style="color: white; text-decoration: underline; margin-left: 1rem;">Reload</a>
        <a style="color: white; text-decoration: underline; margin-left: 1rem; cursor: pointer;" onclick="document.getElementById('blazor-error-ui').style.display='none'">Dismiss</a>
    </div>

    <script src="_framework/blazor.web.js" autostart="false"></script>
	<script src="_content/MudBlazor/MudBlazor.min.js"></script>
    
    <script>
        // PunchOut form submission per Ariba protocol
        // The cXML PunchOutOrderMessage must be submitted via HTML form
        // in a field called "cXML-urlencoded"
        window.submitPunchOutForm = function(postUrl, cxmlMessage) {
            console.log('[PunchOut] Submitting cXML via HTML form (Ariba protocol)');
            
            // Decode HTML entities in URL (&amp; → &)
            // This can happen if the URL was stored in XML
            var decodedUrl = postUrl.replace(/&amp;/g, '&');
            
            console.log('[PunchOut] POST URL:', decodedUrl);
            console.log('[PunchOut] cXML length:', cxmlMessage.length);
            
            // Create a hidden form
            var form = document.createElement('form');
            form.method = 'POST';
            form.action = decodedUrl;
            form.style.display = 'none';
            
            // Add cXML in form field named "cXML-urlencoded" (Ariba requirement)
            var input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'cXML-urlencoded';
            input.value = cxmlMessage;
            
            form.appendChild(input);
            document.body.appendChild(form);
            
            console.log('[PunchOut] Submitting form...');
            console.log('[PunchOut] This will trigger Ariba to close iframe and add items to cart');
            
            // Submit the form - Ariba will handle the iframe closure
            form.submit();
        };
        
        Blazor.start({
            reconnectionOptions: {
                maxRetries: 8,
                retryIntervalMilliseconds: 2000
            },
            circuit: {
                reconnectionHandler: {
                    onConnectionDown: () => {
                        console.warn('Blazor connection lost. Attempting to reconnect...');
                    },
                    onConnectionUp: () => {
                        console.log('Blazor connection restored.');
                    }
                }
            }
        }).catch(err => {
            console.error('Failed to start Blazor:', err);
            document.getElementById('blazor-error-ui').style.display = 'block';
        });
    </script>
</body>

</html>
